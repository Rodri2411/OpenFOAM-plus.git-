FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     icoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.5;

deltaT          0.005;

writeControl    timeStep;

writeInterval   20;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    systemCall1
    {
        type            systemCall;
        functionObjectLibs ("libsystemCall.so");
        enabled         true;
        outputControl   outputTime;

        // called every time step
        executeCalls
        (
            "echo execute"
        );

        // called at the end of the run
        endCalls
        (
            // Note: single quotes to avoid shell expansion
            "echo '*** listing ~/.bashrc ***'"
            "cat ~/.bashrc; echo '*** done ***'"
        );

        // called every output time
        writeCalls
        (
            // Note: can also backslash to escape shell meta-characters
            "echo \*\*\* writing data \*\*\*"
        );
    }
}

// ************************************************************************* //
