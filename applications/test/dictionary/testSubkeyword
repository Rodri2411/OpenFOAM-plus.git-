FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      testDict;
    note        "test with foamDictionary -expand";
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// #inputMode  overwrite

key1 val1;

subdict
{
    key1 a;
    key2 b;
}

update
{
    key1 val1b;
    key2 val2;

    subdict
    {
        key2 $key1;
        key3 val3;
        key2b ${..key2};
        key3b $^key1;
    }
}


$update

// Can a leading '^' or  ':' as anchor for scoping
key3 $^subdict.key1;
key3 ${^update.subdict.key3};
key4 ${:update.subdict...subdict.key1};

// This is currently not working
#remove update.key1
// #remove update

