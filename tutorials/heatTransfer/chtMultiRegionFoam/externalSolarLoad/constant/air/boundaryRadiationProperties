FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      boundaryRadiationProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

".*"
{
    mode            lookup;
    emissivity      uniform 1.0;
    absorptivity    uniform 0.0;
    transmissivity  uniform 1.0;
}

air_to_solid
{
    mode            solidRadiation;
    value           uniform 0;
}

air_to_floor
{
    mode            solidRadiation;
    value           uniform 0;
}

