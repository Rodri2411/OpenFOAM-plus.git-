    {
        name    box; // all cells including hullBox0
        type    cellSet;
        action  new; // was: add;
        source  cellToCell;
        sourceInfo
        {
            set hullBox0;
        }
    }


    {
        name    box;
        type    cellSet;
        action  subset;
        source  boxToCell;
        sourceInfo
        {
            boxes
            (
                 (0.0501 -0.1 -0.1)(0.5 0.1 0.1) //hullBox
            //      (0 -1 -1)(5 1 1) //hullBox
