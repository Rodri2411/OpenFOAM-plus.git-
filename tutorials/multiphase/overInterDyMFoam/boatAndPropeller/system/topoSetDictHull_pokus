actions
(
    {
        name    hullBox0;       // all around bgr
        type    cellSet;
        action  new;
        source  regionToCell;
        sourceInfo
        {
            insidePoints ((0.3 0.001 0.001));
        }
    }



    // Select box to remove from region 1 and 2

    // {
