            //     (-0.08 -0.08 -0.03)(-0.06 0.08 0.03) //rudder
            );
        }
    }

    {
        name    box;
        type    cellSet;
        action  invert;
    }

    {
        name    c0;            //copy
        type    cellSet;
        action  new;
        source  cellToCell;
        sourceInfo
        {
            set hullBox0;
        }
    }

    {
        name    c0;          //all cells but hullBox0 region
        type    cellSet;
        action  invert;
    }
    {
        name    box; // all cells including hullBox0
        type    cellSet;
        action  add;
        source  cellToCell;
        sourceInfo
        {
            set c0;
        }
    }

