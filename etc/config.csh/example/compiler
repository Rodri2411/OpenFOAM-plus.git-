# Modify/override compiler settings
switch ("$WM_COMPILER")
case Gcc70:
    set gcc_version=gcc-7.0.0
    set gmp_version=gmp-6.1.2
    set mpfr_version=mpfr-3.1.5
    set mpc_version=mpc-1.0.3
    breaksw
endsw

